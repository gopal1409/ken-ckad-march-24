  757  vi job.yml
    #####lets add the job
apiVersion: batch/v1
kind: Job
metadata:
  name: nodeapp
spec:
  template:
    spec:
      containers:
        - name: nodeapp
          image: alpine
          command: ["echo","welcome to my node app"]
      restartPolicy: Never
###################apply it
  758  kubectl apply -f job.yml
        ##get pod will show you that the pod has done its work and completed
  759  kubectl get pod
  760  kubectl get job
        ###to check the job has completed its work 
  761  kubectl logs nodeapp-64vrq
#####jobs cannot be update 
764  vi job.yml
####change the echo command
  765  kubectl apply -f job.yml
  766  kubectl get job
  767  kubectl delete job nodeapp
  768  kubectl apply -f job.yml
###completions
vi jobc.yml
###########################
apiVersion: batch/v1
kind: Job
metadata:
  name: nodeapp-comp
spec:
  completions: 2
  template:
    spec:
      containers:
        - name: nodeapp
          image: alpine
          command: ["echo","welcome to my node app"]
      restartPolicy: Never
#############################
  773  kubectl apply -f jobc.yml
  774  kubectl get pod

