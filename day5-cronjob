apiVersion: batch/v1
kind: CronJob
metadata:
  creationTimestamp: null
  name: hello
spec:
  jobTemplate:
    metadata:
      creationTimestamp: null
      name: hello
    spec:
      template:
        metadata:
          creationTimestamp: null
        spec:
          containers:
          - image: busybox
            name: hello
            args: ["/bin/sh","-c","date"] ##add this line
            resources: {}
          restartPolicy: OnFailure
  schedule: '*/1 * * * *' ##add this line
  startingDeadlineSeconds: 22 ##add this line
  concurrencyPolicy: Allow ###addthis line
status: {}
~

